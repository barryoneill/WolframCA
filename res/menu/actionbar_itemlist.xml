    <!-- ActionBarSherlock menu bar for main wolfram ca activity -->

    <!-- launch rule selection dialog -->
    <item
            android:id="@+id/actionbar_changerule"
            android:icon="@android:drawable/ic_menu_gallery"
            android:showAsAction="always|withText"
            android:title="@string/actionbar_but_changerule">
    </item>


    <!-- launch zoom selection dialog -->
    <item
            android:id="@+id/actionbar_changezoom"
            android:icon="@android:drawable/ic_menu_zoom"
            android:showAsAction="always|withText"
            android:title="@string/actionbar_but_changezoom">
    </item>



<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="net.nologin.meep.ca"
          android:versionCode="1"
          android:versionName="1.0">

    <!--
         I want this to work on at least a minimum of 2.3.3 Gingerbread,
         so I'll aim to keep the midSDK at 10.  Unfortunately that means
         no ActionBar, so this project depends on GreedDroid as a dependency app.
         https://github.com/cyrilmottier/GreenDroid
    -->
    <uses-sdk android:minSdkVersion="10" android:targetSdkVersion="17"/>
    <application
            android:name=".CAApplication"
            android:label="@string/app_name"
            android:icon="@drawable/launcher"
            android:theme="@style/Theme.WolframGDTheme">
        <activity android:name=".MainActivity" android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".SettingsActivity"/>
    </application>
</manifest> 

